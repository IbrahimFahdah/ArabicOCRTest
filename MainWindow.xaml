<Window x:Class="ArabicOCR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArabicOCR"
        mc:Ignorable="d"
        Title="Arabic OCR - Document Text Extractor" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <Button x:Name="BtnLoadImage" Content="Load Image" Width="120" Height="36"
                    FontSize="14" Click="BtnLoadImage_Click" Margin="0,0,8,0"/>
            <Button x:Name="BtnLoadPdf" Content="Load PDF" Width="120" Height="36"
                    FontSize="14" Click="BtnLoadPdf_Click" Margin="0,0,8,0"/>
            <Button x:Name="BtnExtract" Content="Extract Text" Width="140" Height="36"
                    FontSize="14" FontWeight="Bold" Click="BtnExtract_Click"
                    IsEnabled="False" Background="#4CAF50" Foreground="White" Margin="0,0,8,0"/>
            <Button x:Name="BtnCopy" Content="Copy Text" Width="120" Height="36"
                    FontSize="14" Click="BtnCopy_Click" IsEnabled="False" Margin="0,0,8,0"/>
            <Button x:Name="BtnClear" Content="Clear" Width="80" Height="36"
                    FontSize="14" Click="BtnClear_Click"/>
            <TextBlock x:Name="TxtStatus" VerticalAlignment="Center" Margin="16,0,0,0"
                       FontSize="13" Foreground="Gray"/>
        </StackPanel>

        <!-- Main content: Image on left, Text on right -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Image panel -->
            <Border Grid.Column="0" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <TextBlock Text="Load an image or PDF to preview"
                               HorizontalAlignment="Center" VerticalAlignment="Center"
                               Foreground="#AAAAAA" FontSize="14"
                               x:Name="TxtImagePlaceholder"/>
                    <ScrollViewer HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">
                        <Image x:Name="ImgPreview" Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="HighQuality"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" Width="8" HorizontalAlignment="Stretch"
                          Background="Transparent" Cursor="SizeWE"/>

            <!-- Text results panel -->
            <Border Grid.Column="2" BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Extracted Text Segments"
                               FontSize="14" FontWeight="SemiBold" Margin="8,8,8,4"/>

                    <TextBox Grid.Row="1" x:Name="TxtResults"
                             IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             FlowDirection="RightToLeft" FontSize="15"
                             FontFamily="Segoe UI, Arial" Margin="4"
                             Background="#FAFAFA"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom: confidence bar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
            <TextBlock Text="Confidence:" VerticalAlignment="Center" FontSize="13" Margin="0,0,8,0"/>
            <ProgressBar x:Name="BarConfidence" Width="200" Height="18" Minimum="0" Maximum="100"/>
            <TextBlock x:Name="TxtConfidence" VerticalAlignment="Center" FontSize="13" Margin="8,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
